<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:text="WORKOUT PLAN"
                android:gravity="center"
                android:textColor="#0f2d5e"
                android:textSize="30sp"
                android:textStyle="bold"
                android:id="@+id/plantitle"
                >
            </TextView>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plantitle"
                android:id="@+id/planimage"
                android:src="@drawable/workoutplan"
                android:scaleType="fitXY"
                >
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="This is generic plan. Contact trainer for detailed plan."
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/planimage"
                android:id="@+id/instructiontext"
                >
            </TextView>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>