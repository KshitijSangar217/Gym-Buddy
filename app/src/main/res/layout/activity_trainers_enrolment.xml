<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainersEnrolment"
    android:background="#CBB2F8">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#47297D">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enrolled Members"
            android:textSize="28sp"
            android:textColor="#EBE3F9"
            android:gravity="center"
            android:padding="10dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TableRow
        android:id="@+id/toptabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="#47297D"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginBottom="5dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="33"
            android:layout_height="match_parent"
            android:text="Total"
            android:textSize="10dp"
            android:textColor="#47297D"
            android:backgroundTint="#EBE3F9"
            android:layout_margin="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="33"
            android:layout_height="match_parent"
            android:text="Gym"
            android:textSize="10dp"
            android:textColor="#47297D"
            android:backgroundTint="#EBE3F9"
            android:layout_margin="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="33"
            android:layout_height="match_parent"
            android:text="Remote"
            android:textSize="10dp"
            android:textColor="#47297D"
            android:backgroundTint="#EBE3F9"
            android:layout_margin="5dp"/>
    </TableRow>
    <TableRow>
        <Button
            android:clickable="false"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:drawablePadding="0dp"
            android:textSize="15dp"
            android:text="998"
            android:textColor="#47297D"
            android:backgroundTint="#CBB2F8"/>
        <Button
            android:clickable="false"
            android:layout_width="0dp"
            android:layout_weight="75"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="Total"
            android:textColor="#47297D"
            android:backgroundTint="#CBB2F8"/>
    </TableRow>
    <androidx.cardview.widget.CardView
        android:id="@+id/membeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="50dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:clickable="true"
        android:onClick="memberProfileForTrainer">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="80"
                    android:layout_height="match_parent"
                    android:paddingLeft="8dp"
                    android:drawableLeft="@drawable/ic_baseline_account_circle_50"
                    android:drawablePadding="2dp"
                    android:text="Kshitij Sangar"
                    android:textStyle="bold"
                    android:gravity="left|center"
                    android:textSize="25sp"
                    android:textColor="#47297D"
                    android:backgroundTint="#CBB2F8"
                    android:layout_margin="8dp"/>
                <Button
                    android:clickable="false"
                    android:layout_width="0dp"
                    android:layout_weight="18"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_baseline_male_50"
                    android:drawablePadding="0dp"
                    android:textSize="18dp"
                    android:textColor="#47297D"
                    android:backgroundTint="#CBB2F8"
                    android:layout_margin="5dp"/>
            </TableRow>
            <TableRow
                android:background="#01158B">
                <Button
                    android:clickable="false"
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="match_parent"
                    android:text="Gym"
                    android:textSize="12dp"
                    android:textColor="#47297D"
                    android:backgroundTint="#FFFFFF"
                    android:layout_margin="5dp"/>
                <Button
                    android:clickable="false"
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="match_parent"
                    android:text="Paid"
                    android:textSize="12dp"
                    android:textColor="#47297D"
                    android:backgroundTint="#FFFFFF"
                    android:layout_margin="5dp"/>
                <Button
                    android:clickable="false"
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="match_parent"
                    android:text="07/05/2021"
                    android:textSize="12dp"
                    android:textColor="#47297D"
                    android:backgroundTint="#FFFFFF"
                    android:layout_margin="5dp"/>
                <Button
                    android:clickable="false"
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="match_parent"
                    android:text="07/06/2021"
                    android:textSize="12dp"
                    android:textColor="#47297D"
                    android:backgroundTint="#FFFFFF"
                    android:layout_margin="5dp"
                    />


            </TableRow>
        </TableLayout>

    </androidx.cardview.widget.CardView>
</TableLayout>