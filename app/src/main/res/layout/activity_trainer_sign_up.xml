<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainerSignUp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scaleType="fitXY"
        >
    </ImageView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        android:src="@drawable/whitebg1"
        >
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="TRAINER SIGN UP"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#0f2d5e"
        android:layout_below="@+id/tagline"
        android:id="@+id/trainerlogin"
        >
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        app:counterTextColor="@color/black"
        app:hintTextColor="@color/black"
        android:textSize="20sp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_below="@+id/trainerlogin"
        android:id="@+id/emailans">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterTextColor="@color/black"
        android:hint="Name"
        app:hintTextColor="@color/black"
        android:textSize="20sp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_below="@+id/emailans"
        android:id="@+id/nameans"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:backgroundTint="#B3A0EF"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterTextColor="@color/black"
        android:hint="Address"
        app:hintTextColor="@color/black"
        android:textSize="20sp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_below="@+id/nameans"
        android:id="@+id/addrans"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:backgroundTint="#B3A0EF"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:counterTextColor="@color/black"
        android:hint="Contact No"
        app:hintTextColor="@color/black"
        android:textSize="20sp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_below="@+id/addrans"
        android:id="@+id/contactans"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:backgroundTint="#B3A0EF"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:counterTextColor="@color/black"
        android:hint="Gender (M/F)"
        app:hintTextColor="@color/black"
        android:textSize="20sp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_below="@+id/addrans"
        android:layout_toRightOf="@id/contactans"
        android:id="@+id/genderans"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:backgroundTint="#B3A0EF"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        app:counterTextColor="@color/black"
        android:hint="Password"
        app:hintTextColor="@color/black"
        android:textSize="20sp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_below="@+id/contactans"
        android:id="@+id/passwordans"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:backgroundTint="#B3A0EF"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    


    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/passwordans"
        android:layout_centerInParent="true"
        android:text="Sign up"
        android:textColor="@color/white"
        app:backgroundTint="#0f2d5e"
        android:id="@+id/signin"
        >
    </Button>


    <ProgressBar
        android:id="@+id/trainer_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bgcircle"
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:visibility="invisible"/>

</RelativeLayout>