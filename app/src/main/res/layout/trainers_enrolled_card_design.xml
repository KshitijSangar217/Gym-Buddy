<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/memberCard"
    android:layout_margin="10dp"
    android:background="@color/black"
    android:clickable="true"
    android:onClick="memberProfileForTrainer"
    android:padding="50dp"
    app:cardCornerRadius="10dp"
    android:elevation="8dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/trainerCardName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="80"
                android:backgroundTint="#CBB2F8"
                android:drawableLeft="@drawable/ic_baseline_account_circle_50"
                android:drawablePadding="2dp"
                android:gravity="left|center"
                android:paddingLeft="8dp"
                android:text="Kshitij Sangar"
                android:textColor="#47297D"
                android:textSize="25sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/trainerCardGender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="18"
                android:background="@drawable/ic_baseline_male_50"
                android:backgroundTint="#CBB2F8"
                android:clickable="false"
                android:drawablePadding="0dp"
                android:textColor="#47297D"
                android:textSize="18dp"/>
        </TableRow>

        <TableRow android:background="#01158B">

            <Button
                android:id="@+id/trainerCardMode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="15"
                android:backgroundTint="#FFFFFF"
                android:clickable="false"
                android:text="Gym"
                android:textColor="#47297D"
                android:textSize="12dp" />

            <Button
                android:id="@+id/trainerCardFee"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="15"
                android:backgroundTint="#FFFFFF"
                android:clickable="false"
                android:text="Paid"
                android:textColor="#47297D"
                android:textSize="12dp" />

            <Button
                android:id="@+id/trainerCardStartDt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="15"
                android:backgroundTint="#FFFFFF"
                android:clickable="false"
                android:text="07/05/2021"
                android:textColor="#47297D"
                android:textSize="12dp" />

            <Button
                android:id="@+id/trainerCardEndDt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="15"
                android:backgroundTint="#FFFFFF"
                android:clickable="false"
                android:text="07/06/2021"
                android:textColor="#47297D"
                android:textSize="12dp" />


        </TableRow>
    </TableLayout>

</androidx.cardview.widget.CardView>